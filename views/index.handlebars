<div class="row"> <!-- row for eat da burger heading -->
  <h1 class="text-center">Eat-da-Burger</h1>
</div> <!-- row for eat da burger heading -->

<div class="row"> <!-- row for burger pic -->
  <img class="center-block" id="headerPic" src="assets/img/burger.png">
</div>

<div class="container"> <!-- container for whole page -->
  <div class="row"> <!-- row for list of  burgers -->
    <div class="col-sm-6"> <!-- column for available burgers -->

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}} <span>.</span> {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="eatIt" value="false">
                <button type="submit">EAT IT</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>  <!-- column for available burgers -->

    <div class="col-sm-6">

    </div>
  </div> <!-- closing row for list of burger -->


</div> <!-- closing container for whole page -->
